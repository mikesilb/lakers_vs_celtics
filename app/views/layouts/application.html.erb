<!DOCTYPE html>
<html>
  <head>
    <title>Lakers versus Celtics</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id=topbar>
      <% flash.each do |type, message| %>
        <div>
          <%= message %>
        </div>
      <% end %>
    <p class="navbar-text pull-right">
      <% if user_signed_in? %>
        Logged in as <strong><%= current_user.first_name %></strong>.
        <img src="<%= current_user.profile_photo %>" height="42" width="42">
      <% else %>
      <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %> |
      <% end %>
    </p>
    <p class="home-link">
      <% if user_signed_in? && current_user.admin? %>
        <%= link_to "See All Users", users_path %>
      <% end %>
      <%= link_to "Home", root_path %>
      <% if user_signed_in? %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
      <% end %>
    </p>
  </div>
  <header>
        <!-- <div class="nav">
          <ul id = navbar>
            <li class="Home"><a href="#">Home</a></li>
            <li> <%= link_to "NBA Finals", nbafinals_path %> </li>
            <li class="Games"><a href="#">Games</a></li>
            <li class="Teams"><a href="#">Teams</a></li>
            <li class="Players"><a href="#">Players</a></li>
            <li class="The Rivalry"><a href="#">'The Rivalry'</a></li>
          </ul>
        </div> -->
    <div id=finals-list>
    </div>
  </header>
  <%= yield %>
  </body>
</html>
