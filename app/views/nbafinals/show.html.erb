
  <h1><%= @nbafinal.year %></h1>
  <% if @nbafinal.champion == "Celtics" %>
    <% team_city = "Boston" %>
  <% else %>
    <% team_city = "Los Angeles" %>
  <% end %>
  <div id="eachfinals">
    <p>The <%= team_city %> <%= @nbafinal.champion %> won the <%= @nbafinal.year %> NBA Championship in
      <%= @nbafinal.numgames %> games. </p>
      <% if @nbafinal.mvp != nil %>
      <p><%= @nbafinal.mvp %> was the MVP of the series.<p>
      <% end %>
  </div>
  <div id="reviewform">
    <% if user_signed_in? %>
      <%= form_for [ @nbafinal, @review ] do |f| %>
        <h2> Add a review: </h2>
        <div class="field">
          <%= f.label :rating %>
          <%= f.select :rating, @review_ratings %>
        </div>

        <div class="field">
          <%= f.label :body, "Review" %>
          <%= f.text_area :body %>
        </div>

        <div class="actions">
          <%= f.submit value="Submit Review" %>
        </div>
      <% end %>
    <% end %>
  </div>


<div id=reviewlist>
<h4>Reviews</h4>
  <% @nbafinal.reviews.each do |review| %>
    <% if user_signed_in? %>
      <% if current_user == review.user %>
        <%= link_to "Edit Review", edit_review_path(review) %>
      <% end %>
      <% if current_user.id == review.user_id && current_user.admin? %>
        |
      <% end %>
      <% if current_user.admin? %>
        <%= link_to "Delete Review", review, method: :delete %>
      <% end %>
    <% end %>
    <div id="vote"></div>
    <p>Rating: <%= review.rating %></p>
    <p>Review: <%= review.body %></p>
    <p><%= review.created_at.strftime("%B %d, %Y") %></p>
    <p>Review made by <%= review.user.first_name %> <%= review.user.last_name %>
    <hr/>
  <% end %>
</div>


<div id="returntoindexlink">
  <%= link_to "Return to NBA Finals Index Page", nbafinals_path %>
</div>
