<div class="editreviewform">
  <div class="formcomponents">
    <h2>Edit Review</h2>
    <%= form_for(@review) do |f| %>
      <div class="field">
        <%= f.label :rating, "Rating" %>
        <%= f.select :rating, @review_ratings %>
      </div>

    <div class="corefield">
      <div class="corelabel">
        <%= f.label :body, "Review" %>
      </div>
        <%= f.text_area :body %>
      </div>

      <div class="actions">
        <%= f.submit value="Submit Review", :class => "button" %>
      </div>
    <% end %>
    <%= link_to 'Home', nbafinals_path %> | <%= link_to "Delete Review", @review, method: :delete %>
  </div>
</div>
